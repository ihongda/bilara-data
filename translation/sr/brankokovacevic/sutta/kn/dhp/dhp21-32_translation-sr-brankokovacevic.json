{
  "dhp21:0.1": "Kratka zbirka Budnih govora ",
  "dhp21:0.2": "Reči mudrosti ",
  "dhp21:0.3": "Pažljivost ",
  "dhp21:1": "Pažnja je put u besmrtnost, ",
  "dhp21:2": "nepažnja put u smrt. ",
  "dhp21:3": "Gde pažljivi ne umiru, ",
  "dhp21:4": "nepažljivi su već mrtvacu nalik. ",
  "dhp22:1": "Kad sasvim razumeju ",
  "dhp22:2": "pažnje važnost, ",
  "dhp22:3": "mudraci se pažljivosti vesele, ",
  "dhp22:4": "uživaju u svetu plemenitih. ",
  "dhp23:1": "Oni koji meditiraju neprekidno, ",
  "dhp23:2": "napora nesmanjenog, ",
  "dhp23:3": "takvi mudraci smirenje dosežu, ",
  "dhp23:4": "od okova krajnju slobodu. ",
  "dhp24:1": "Onome ko je uporan, pažljiv, ",
  "dhp24:2": "čistih dela, promišljen, ",
  "dhp24:3": "živi potpuno obuzdan, u istini, ",
  "dhp24:4": "budan, tome dobar glas raste. ",
  "dhp25:1": "Postojan i istrajan, ",
  "dhp25:2": "obuzdan, čula ukroćenih, ",
  "dhp25:3": "nek mudrac sebe ostrvom načini, ",
  "dhp25:4": "koje ni bujica preplaviti neće. ",
  "dhp26:1": "Nepažnji se prepuštaju ",
  "dhp26:2": "lude i neznalice, ",
  "dhp26:3": "a mudrac pažljivost ",
  "dhp26:4": "k’o najveće blago čuva. ",
  "dhp27:1": "Ne prepuštaj se nepažnji, ",
  "dhp27:2": "ne vezuj za užitke, ",
  "dhp27:3": "pažljiv u zadubljenju ",
  "dhp27:4": "stiče obilje sreće. ",
  "dhp28:1": "Kad nepažnju pažnjom ",
  "dhp28:2": "mudrac ukloni, ",
  "dhp28:3": "ispevši se na mudrosti vrh, ",
  "dhp28:4": "srećnik nesrećne vidi "
}