{
  "dhp256:0.1": "Kratka zbirka Budnih govora ",
  "dhp256:0.2": "Reči mudrosti ",
  "dhp256:0.3": "Pravednik ",
  "dhp256:1": "Nije neko pravednik ",
  "dhp256:2": "zato što prebrzo o dobru sudi. ",
  "dhp256:3": "Kad mudar čovek ",
  "dhp256:4": "dobro i zlo pažljivo odvagne, ",
  "dhp257:1": "proceni druge bez žurbe, ",
  "dhp257:2": "pravedno i bez naklonosti, ",
  "dhp257:3": "tek takvog mudraca, čuvara zakona, ",
  "dhp257:4": "pravednikom zovu. ",
  "dhp258:1": "Nije neko mudar ",
  "dhp258:2": "samo zato što mnogo priča. ",
  "dhp258:3": "Ko je spokojan, bez mržnje i straha, ",
  "dhp258:4": "toga mudracem zovu. ",
  "dhp259:1": "Nije neko znalac Dhamme ",
  "dhp259:2": "samo zato što mnogo priča. ",
  "dhp259:3": "Onaj ko i malo čuje, ",
  "dhp259:4": "te sam za sebe razume Učenje, ",
  "dhp259:5": "tek taj je znalac Dhamme, ",
  "dhp259:6": "taj Učenje ne zanemaruje. "
}