{
  "dhp157:0.1": "Kratka zbirka Budnih govora ",
  "dhp157:0.2": "Reči mudrosti ",
  "dhp157:0.3": "O samom sebi ",
  "dhp157:1": "Kome je do samog sebe stalo, ",
  "dhp157:2": "nek dobro na sebe pazi, ",
  "dhp157:3": "barem u jednom od tri dela noći ",
  "dhp157:4": "nek ovaj mudrac na oprezu bude. ",
  "dhp158:1": "U dobrom prvo sebe ustali, ",
  "dhp158:2": "tek onda upućuj druge, ",
  "dhp158:3": "u istinskom znalcu ",
  "dhp158:4": "nečistoća zaista nema. ",
  "dhp159:1": "O, kad bismo činili uvek ",
  "dhp159:2": "ono što drugima savetujemo. "
}