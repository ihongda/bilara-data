{
  "dhp116:0.1": "Kratka zbirka Budnih govora ",
  "dhp116:0.2": "Reči mudrosti ",
  "dhp116:0.3": "Zlodelo ",
  "dhp116:1": "Prionite da činite dobro, ",
  "dhp116:2": "loše misli odagnajte, ",
  "dhp116:3": "u onoga ko dobra ne čini, ",
  "dhp116:4": "um se raduje zlodelu. ",
  "dhp117:1": "Ako čovek i učini nešto loše, ",
  "dhp117:2": "neka to ne ponavlja, ",
  "dhp117:3": "neka u tome ne uživa. ",
  "dhp117:4": "Bolno je gomilanje zlodela. ",
  "dhp118:1": "Ako čovek učini dobro, ",
  "dhp118:2": "neka to ponavlja, ",
  "dhp118:3": "neka u tome uživa. ",
  "dhp118:4": "Srećno je gomilanje dobročinstava. ",
  "dhp119:1": "Možda ga vidi i kao dobro, ",
  "dhp119:2": "sve dok zlodelo ne donese plod, ",
  "dhp119:3": "ali kad donese plod, ",
  "dhp119:4": "tada zlotvor prepozna zlodelo. ",
  "dhp120:1": "Možda ga vidi i kao zlo, ",
  "dhp120:2": "sve dok dobročinstvo ne donese plod, ",
  "dhp120:3": "ali kad donese plod, ",
  "dhp120:4": "tada dobročinitelj prepozna dobročinstvo. ",
  "dhp121:1": "Ne zanemaruj zlo, ",
  "dhp121:2": "misleći: „Ono mene neće osvojiti.” ",
  "dhp121:3": "Kap po kap ",
  "dhp121:4": "i vedro se napuni vodom, "
}